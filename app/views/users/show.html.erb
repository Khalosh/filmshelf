<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %> 
        <% if current_user.friend_with? @user %>
        <div id="friend">
          <h4>Friend<h4>
        </div>

         <% elsif current_user.invited? @user %>
        <div id="friend">
          <h4>Pending request...<h4>
        </div>

        <% else %>

                   <% if @user != current_user %>
  <div id="friend">
  <%= link_to "Add as a friend", friends_path(:user_id => @user), :method => "post", class: "btn" %>
</div>
</br>
  <% end %>
    <% end %>
      </h1>

      </section>

    </aside>

</div>





<div id="casing" >
<div id="home-content" class="clearfix">

  <ul id="shelf">

<% for i in (0..@movies.count-1) do %>


            
    <li class="box" id="post-17">
        <div class="postim" id="post-17">
            <div class="btitle">
                <h2> <%= link_to  :controller => "movies", :action => "show", :id => @movie_data[i][4] do %>
                  <%= @movie_data[i][0] %>
                <% end %></h2>
            </div>
            <span class="inwriter"></span>
            <%= link_to  :controller => "movies", :action => "show", :id => @movie_data[i][4] do %>
            <img class="bookcover" src=<%= @movie_data[i][1] %>alt=""/>
            <% end %>

        </div>

    </li>
    
    

 
<% end %>
</ul>

</div>

</div>
<% if @user == current_user %>
<%= link_to "Add a movie!", add_path, class: "btn btn-large btn-primary" %>
<% end %>