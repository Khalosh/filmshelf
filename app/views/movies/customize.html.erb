<h2>Add info about movie</h2>
<div id="customize" class="well well-large" >
<%= form_for(@movie) do |f| %>
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
      <% @movie.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.hidden_field :user_id, :value => current_user.id %>
  </div>
  <div class="field">
    <%= f.label :imdb %>
    <%= f.text_field :imdb, :value => @imdb_id[0], :readonly => true %>
  </div>
  <div class="btn-group">
    <%= f.label :media %>
    <%= f.select :media, [['CD','CD'],['DVD','DVD'],['BR','BR']] %>
  </div>
  <div class="field">
    <%= f.label :media_info %>
    <%= f.text_field :media_info %>
  </div>
  <div class="field">
    <%= f.label :seen %>
    <%= f.check_box :seen %>
  </div>
  <br />
  <div class="actions">
    <%= f.submit class: "btn btn-large btn-primary"%>
  </div>
<% end %>
</div>


<%= link_to 'Back', movies_path %>
